<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="left|center"
              android:orientation="horizontal" >

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <View
            android:layout_width="1px"
            android:layout_height="10dp"
            android:background="@color/video2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <View
                android:layout_width="1px"
                android:layout_height="35dp"
                android:background="@color/video2"
                android:layout_centerInParent="true" />

            <ImageView
                android:src="@drawable/ic_emoji_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/video2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/video2"
            android:layout_marginBottom="9dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.github.omadahealth.typefaceview.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/video2"
            android:textSize="18dp"
            app:tv_typeface="roboto_light"
            android:text="Nobody use this app from your contacts"
            android:background="@drawable/bg_border"
            android:padding="8dp" />

    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent" />

</LinearLayout>